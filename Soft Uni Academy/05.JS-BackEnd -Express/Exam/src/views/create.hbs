            <!-- Create Page (Only for logged-in users) -->
            <section id="create">
                <div class="form">
                    <h2>Add Stone</h2>
                    <form class="create-form" method="POST" action="/create">
                        <input type="text" name="name" id="name" placeholder="Name" value="{{name}}"/>
                        <input type="text" name="category" id="category" placeholder="Category" value="{{category}}"/>
                        <input type="text" name="color" id="color" placeholder="Color" value="{{color}}"/>
                        <input type="text" name="imageUrl" id="stone-img" placeholder="Image URL.." value="{{imageUrl}}"/>
                        <input type="text" name="location" id="location" placeholder="Location" value="{{location}}"/>
                        <input type="text" name="formula" id="formula" placeholder="Formula" value="{{formula}}"/>
                        <textarea id="description" placeholder="Description..." name="description" value="{{description}}"></textarea>

                        <button type="submit">Create</button>
                    </form>
                </div>
            </section>