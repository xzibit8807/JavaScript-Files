<!-- Search Page (Only for logged-in users) -->
<section id="search">
    <h2>Search by Name</h2>

    <form class="search-wrapper cf" method="GET" action="/search">
        <input id="search-input" type="text" name="name" placeholder="Search here..."  />
        <button type="submit">Search</button>
    </form>

    <div id="search-container">
        <ul class="card-wrapper">
            {{#if result.length}}
                {{#each result}}
                    <!-- Display a li with information about every post -->
                    <li class="card">
                        <img src="{{imageUrl}}" />
                        <p><strong>Name:</strong> <span class="name">{{name}}</span></p>
                        <p><strong>Category:</strong> <span class="category">{{category}}</span></p>
                        <p><strong>Formula:</strong> <span class="formula">{{formula}}</span></p>
                        <a class="details-btn" href="/{{_id}}/details">Details</a>
                    </li>
                {{/each}}
            {{else}}
                <li>No results found.</li>
            {{/if}}
        </ul>
    </div>
</section>
